<%= form_tag "/session/" do %>
  <%= hidden_field_tag :redirect, params[:redirect] %>
  <div class="row">
    <%= label_tag "email:" %>
    <%= text_field_tag "email" %>
  </div>
  <div class="row">
    <%= label_tag "password:" %>
    <%= password_field_tag "password" %>
  </div>
  <%= submit_tag 'Login' %> or <%= link_to 'Signup', new_user_path %>
<% end %>
